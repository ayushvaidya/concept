<div class="form-page">
  <div class="form-container">
    <div class="title">New Epic</div>
      <%= simple_form_for @epic do |form| %>
        <% if @epic.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@epic.errors.count, "error") %> prohibited this epic from being saved:</h2>

            <ul>
            <% @epic.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>


        <%= form.text_field :name,
          class: "form-control",
          placeholder: 'Epic name'
        %>

        <%= form.button :submit, "Update", class: "button" %>
      <% end %>

    <div class="shared-links">
      <%= link_to 'Back', project_path(id: @epic.project_id), class: 'link' %>
      <%= link_to 'Destroy', @epic, method: :delete, data: { confirm: 'Are you sure?' }, class: 'link' %>
    </div>
  </div>
</div>

