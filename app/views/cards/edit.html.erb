<div class="form-page">
  <div class="form-container">
    <div class="title">New Story</div>
      <%= simple_form_for @card do |form| %>
        <% if @card.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>

            <ul>
            <% @card.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <%= form.hidden_field :list_id, value: params[:list_id] %>

        <%= form.hidden_field :epic_id, value: params[:epic_id] %>

        <%= form.text_field :name,
          class: "form-control",
          placeholder: 'Story'
        %>

        <%= form.button :submit, "Update", class: "button" %>
      <% end %>


    <div class="shared-links">
      <%= link_to 'Back', project_path(id: @card.project_id), class: 'link' %>
      <%= link_to 'Destroy', @card, method: :delete, data: { confirm: 'Are you sure?' }, class: 'link' %>
    </div>
  </div>
</div>
