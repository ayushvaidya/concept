<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

<%= f.input :email,
            required: true,
            autofocus: true ,
            input_html: { autocomplete: "email", class: "form-control dark-form" },
            label: false,
            placeholder: "Email Address"
            %>
<%= f.input :password,
            required: true,
            input_html: { autocomplete: "new-password", class: "form-control dark-form" },
            label: false,
            placeholder: "Password"
             %>

<%= f.button :submit, "Sign Up", class: "button" %>

<% end %>
